<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MobileRegisterationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5sdp"
        android:weightSum="6">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="5">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/MyCustomTabLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="@string/login_title"
                android:textAllCaps="false"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/_12sdp" />


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linRegisteration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/textview_styles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:text="@string/we_will_send"
                android:textAlignment="center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textview_styles"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="wrap_content"
                        android:text="+92"
                        android:textAlignment="center"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1sp"
                        android:background="@color/grey_ligt_black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMobileNumber"
                        style="@style/customTextInputs"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:hint="3xxxxxxxxx"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:paddingLeft="@dimen/_2sdp"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:id="@+id/imgBorderPhoneNum"
                        android:layout_width="fill_parent"
                        android:layout_height="1sp"
                        android:background="@color/grey_ligt_black" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:padding="@dimen/_10sdp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                style="@style/customButton"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"

                android:text="@string/next" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_10sdp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linMainVerification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/textview_styles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:text="@string/please_neter_code"
                android:textAlignment="center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDigitsVerification"
                    style="@style/customTextInputs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0000"
                    android:inputType="number"
                    android:letterSpacing="0.5"

                    android:maxLength="4"
                    android:textAlignment="center"
                    android:textSize="@dimen/_14sdp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1sp"
                    android:background="@color/grey_ligt_black" />
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:padding="@dimen/_10sdp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerify"
                style="@style/customButton"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:text="@string/verify" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvResend"
                    style="@style/textview_styles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resend_in"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/tvTime"

                    style="@style/textview_styles"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textAlignment="center"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/tvSec"
                    style="@style/textview_styles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sec"
                    android:textColor="@color/red" />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>