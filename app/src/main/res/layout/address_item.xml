<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardAddress"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvAddressType"
                style="@style/textview_styles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dp"
                android:text="Home"
                android:textColor="@color/black" />

            <ImageView

                android:id="@+id/imgEdit"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:background="@color/black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvName"
            style="@style/textview_styles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mr Amir"
            android:textColor="@color/grey_ligt_black" />

        <TextView
            android:id="@+id/tvFlatHouse"
            style="@style/textview_styles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="address 1"
            android:textColor="@color/grey_ligt_black" />

        <TextView
            android:id="@+id/tvAreaColonySector"
            style="@style/textview_styles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address 2"
            android:textColor="@color/grey_ligt_black" />

        <TextView
            android:id="@+id/tvAddress"
            style="@style/textview_styles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here is complete address of receiver"
            android:textColor="@color/grey_ligt_black" />
    </LinearLayout>
</androidx.cardview.widget.CardView>